<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it226.myapplicationit226androidapp">
    <uses-sdk
        android:minSdkVersion="23"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- to get location using GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <receiver
        android:name="com.coderplus.AlarmReceiver"
        android:exported="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".Logic" />
        <activity

            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dateActivity"
            android:label="@string/title_activity_date"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it226.myapplicationit226androidapp.MainActivity" />

            <intent-filter>
                <action android:name="dateActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".clockActivity"
            android:label="@string/title_activity_clock"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it226.myapplicationit226androidapp.MainActivity" />

            <intent-filter>
                <action android:name="clockActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timerActivity"
            android:label="@string/title_activity_timer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it226.myapplicationit226androidapp.MainActivity" />

            <intent-filter>
                <action android:name="timerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".messageActivity"
            android:label="@string/title_activity_message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it226.myapplicationit226androidapp.MainActivity" />

            <intent-filter>
                <action android:name="messageActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".locationActivity"
            android:label="@string/title_activity_location"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="locationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recursiveActivity"
            android:label="@string/title_activity_recursive"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="recursiveActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timeZoneActivity"
            android:label="@string/title_activity_time_zone"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="time_zoneActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AndroidLocationActivity"
            android:label="@string/app_name">
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="AndroidLocationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <intent-filter>
            <action android:name="transparent" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity
            android:name=".Displayer"
            android:label="@string/title_activity_displayer"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>